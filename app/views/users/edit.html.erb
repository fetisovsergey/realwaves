<!DOCTYPE html>
<html>
<head>
	<% provide(:title, @title) %>
	<meta name="description" content="YourWaves | Настройки профиля" />
</head>
<body>
<div id="signup_form">
      <h1>Настройки профиля пользователя</h1><br>
      <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <%= image_tag(current_user.avatar.url(:medium), id: "main_avatar",class: "btn") %><br><br>     
              Имя пользователя:<br>
              <%= f.text_field :name, placeholder: current_user.name %><br>
              Пароль:<br>
              <%= f.password_field :password %><br>
              Повторите пароль:<br>
              <%= f.password_field :password_confirmation %><br>   
              <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', style:"display:none",id: "file_field_button" %>
			  <%= f.submit "Сохранить", class: "btn btn-inverse",style:"width:220px;background:#000000",id: "save_button" %>
	  <% end %>
</div>
</body>
</html>
